@model E_Commerce.Model.CustomerViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- front icon link -->
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Boothstrap Css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <!-- Jquery CDN link -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js">
    </script>
    <!-- Own Css -->
    <!--  <link rel="stylesheet" href="index.css">
    <link rel="stylesheet" href="contact.css"> -->
    <link href="~/Assets/Own Css/index.css" rel="stylesheet" />
    <link href="~/Assets/Own Css/contact.css" rel="stylesheet" />
    <link href="~/Assets/Own Css/login.css" rel="stylesheet" />
</head>
<body>
    <section class="contactdetailsstart">
        <div class="container">
            <div class="contactdetails">
                <div class="contact">
                    <div class="contacttitle">
                        <span> icon</span>
                        <h5>Email Adress</h5>
                    </div>
                    <p>
                        <a href="mailto:email@example.com">email@example.com</a>
                    </p>
                </div>
                <hr class="bewteenline">
                <div class="contact">
                    <div class="contacttitle">
                        <span> icon</span>
                        <h5>Phone Number</h5>
                    </div>
                    <p>
                        +(0888)01900000000000000
                    </p>
                </div>
                <hr class="bewteenline">
                <div class="contact">
                    <div class="contacttitle">
                        <span> icon</span>
                        <h5>Address</h5>
                    </div>
                    <p>
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Expedita illum, ipsum porro ea quia at laboriosam aperiam, tempora veritatis nemo officia nulla iste blanditiis dicta labore debitis minima voluptates quod.
                    </p>
                </div>
            </div>
        </div>
    </section>
    <section class="social-id-details">
        <div class="container">
            <div class="social-media-details-item">
                <ul class="social-media-list">
                    <li>
                        <a href="#" class="fa fa-facebook"></a>
                    </li>
                    <li>
                        <a href="#" class="fa fa-twitter"></a>
                    </li>
                    <li>
                        <a href="#" class="fa fa-instagram"></a>
                    </li>
                    <li>
                        <a href="#" class="fa fa-youtube"></a>
                    </li>
                </ul>
            </div>
        </div>
    </section>
    <section class="contact-email-start">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d22864.11283411948!2d-73.96468908098944!3d40.630720240038435!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew+York%2C+NY%2C+USA!5e0!3m2!1sen!2sbg!4v1540447494452" width="100%" height="380" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                    <h2 class="contact-title text-center">Contact</h2>
                    <p class="contact-short-details text-center">
                        Lorem Ipsum is simply dummy text of the printing  and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s
                    </p>
                    @using (Html.BeginForm("contact", "index", FormMethod.Post, new { enctype = "multipart/form-data", @class = "login" }))
                    {
                        <div class="login-input">
                            @Html.TextBoxFor(Model => Model.Email.CustomerFullName, new { @class = "login-from-input", @placeholder = "Enter Your Full Name" })
                            @Html.ValidationMessageFor(Model => Model.Email.CustomerFullName)
                        </div>
                        <div class="login-input">
                            @Html.TextBoxFor(Model => Model.Email.CustomerEmailAddress, new { @class = "login-from-input", @placeholder = "Enter Your Email" })
                            @Html.ValidationMessageFor(Model => Model.Email.CustomerEmailAddress)
                        </div>
                        <div class="login-input">
                            @Html.TextBoxFor(Model => Model.Email.EmailSubject, new { @class = "login-from-input", @placeholder = "Subject" })
                            @Html.ValidationMessageFor(Model => Model.Email.EmailSubject)
                        </div>
                        <div class="mb-3">
                            @Html.TextAreaFor(Model => Model.Email.Email, new { @class = "form-control login-from-input text-input-form", @id = "exampleFormControlTextarea1", rows = "3", @placeholder = "Message" })
                            @Html.ValidationMessageFor(Model => Model.Email.Email)
                        </div>
                        <div class="login-input">
                            <button class="button-link loginbutton" type="submit"><i></i> Send</button>

                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</body>
</html>
