@model E_Commerce.Model.CustomerViewModel
@{

    Layout = "~/Views/Shared/Layout/_FrontEndLayout.cshtml";

}
@{
    ViewBag.Title = "login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- front icon link -->
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Boothstrap Css -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <!-- Jquery CDN link -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js">
    </script>
    <!-- Own Css -->
    <!--<link rel="stylesheet" href="index.css">
        <link rel="stylesheet" href="login.css">-->
    <link href="~/Assets/Own Css/login.css" rel="stylesheet" />
    <link href="~/Assets/Own Css/index.css" rel="stylesheet" />
</head>
<body>
    <!-- Login Page Start -->
    <section class="tab-version">
        <div class="container">
            <div class="form-title-details">
                <h2 class="login-title">Log in</h2>
                <p class="login-short-details">
                    Lorem Ipsum is simply dummy text of the printing  and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s
                </p>
            </div>
            <div class="aboutstart">
                @if (ViewData["Message"] != null)
                {
                    <h5 class="confirmationmessage" style="color:red">@ViewData["Message"]</h5>
                }

                @using (Html.BeginForm("login", "login", FormMethod.Post, new { enctype = "multipart/form-data", @class = "login" }))
                {
                    <div class="login-input">
                        @Html.TextBoxFor(Model => Model.user.UserName, new { @class = "login-from-input", @placeholder = "Enter Your User Name" })
                        @Html.ValidationMessageFor(Model => Model.user.UserName)
                    </div>
                    <div class="login-input">
                        @Html.TextBoxFor(Model => Model.user.UserPassword, new { @class = "login-from-input", @placeholder = "Enter Your Password" })
                        @Html.ValidationMessageFor(Model => Model.user.UserPassword)

                    </div>
                    <div class="social-button-details">
                        <a class="button-link facebook"><i class="fa fa-facebook"></i> Facebook</a>
                        <a class="button-link twitter"><i class="fa fa-twitter"></i> Twitter</a>
                    </div>
                    <div class="login-input">
                        <button class="button-link loginbutton" type="submit"> Login</button>
                    </div>
                }

            </div>
        </div>
    </section>
    <section class="loginfromstart">
        <div class="container">

        </div>
        <div class=" login-form-details">

        </div>

    </section>
    <!-- Login Page End -->
</body>
</html>

